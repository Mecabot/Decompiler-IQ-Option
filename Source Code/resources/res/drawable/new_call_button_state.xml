<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:exitFadeDuration="@integer/short_animation_duration">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/dp1" android:color="@color/white"/>
            <solid android:color="@color/transparent"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="@dimen/dp1" android:color="@color/green"/>
            <solid android:color="@color/transparent"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
