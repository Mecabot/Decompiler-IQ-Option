<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/grey_blur_05"/>
                    <corners android:radius="@dimen/dp8"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/grey_blur_50"/>
                    <corners android:radius="@dimen/dp8"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey_blur_15"/>
            <corners android:radius="@dimen/dp8"/>
        </shape>
    </item>
</selector>
