<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/dp1" android:color="@color/grey_blur_10"/>
            <corners android:radius="@dimen/dp3"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/dp1" android:color="@color/white"/>
            <corners android:radius="@dimen/dp3"/>
        </shape>
    </item>
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/dp1" android:color="@color/grey_blur_30"/>
            <corners android:radius="@dimen/dp3"/>
        </shape>
    </item>
</selector>
