<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/green"/>
                    <corners android:radius="@dimen/dp3"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/grey_blur_50"/>
                    <corners android:radius="@dimen/dp3"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/green_40"/>
            <corners android:radius="@dimen/dp3"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/green"/>
            <corners android:radius="@dimen/dp3"/>
        </shape>
    </item>
</selector>
