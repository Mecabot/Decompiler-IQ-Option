<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:color="?attr/colorControlHighlight">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/dp12"/>
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_pressed="false">
                <shape>
                    <solid android:color="@color/transparent"/>
                </shape>
            </item>
            <item android:state_pressed="true">
                <shape>
                    <solid android:color="@color/grey_blur_12"/>
                    <corners android:radius="@dimen/dp12"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>
