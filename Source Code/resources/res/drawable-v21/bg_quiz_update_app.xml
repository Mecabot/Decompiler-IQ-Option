<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:color="#ccf4f5f8">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorControlHighlight"/>
            <corners android:radius="@dimen/dp20"/>
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <stroke android:width="@dimen/dp2" android:color="#ffffff"/>
                    <solid android:color="#33ffffff"/>
                    <corners android:radius="@dimen/dp20"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="@dimen/dp2" android:color="#ffffff"/>
                    <corners android:radius="@dimen/dp20"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>
