<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:color="@color/orange">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/orange"/>
            <gradient android:startColor="#e05b1c" android:endColor="#f4992e" android:angle="90"/>
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/orange"/>
                    <gradient android:startColor="#e05b1c" android:endColor="#f4992e" android:angle="90"/>
                </shape>
            </item>
            <item android:state_pressed="false">
                <shape android:shape="rectangle">
                    <solid android:color="#c4ffffff"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>
