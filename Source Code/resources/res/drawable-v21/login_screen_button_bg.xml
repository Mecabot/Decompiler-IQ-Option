<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:color="@color/orange">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/login_screen_button_bg_end_color"/>
            <corners android:radius="@dimen/dp12"/>
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_pressed="false">
                <shape>
                    <gradient android:startColor="@color/login_screen_button_bg_start_color" android:endColor="@color/login_screen_button_bg_end_color" android:angle="0" android:type="linear"/>
                    <corners android:radius="@dimen/dp12"/>
                </shape>
            </item>
            <item android:state_pressed="true" android:drawable="@drawable/login_screen_button_pressed_bg"/>
        </selector>
    </item>
</ripple>
