<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:color="@color/withdrawal_button_pressed">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/withdrawal_button_default"/>
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_enabled="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/withdrawal_button_default"/>
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/withdrawal_button_disabled"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>
