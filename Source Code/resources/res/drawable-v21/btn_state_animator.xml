<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:duration="300" android:valueTo="0.95f" android:valueType="floatType" android:propertyName="scaleX"/>
            <objectAnimator android:duration="200" android:valueTo="0.95f" android:valueType="floatType" android:propertyName="scaleY"/>
        </set>
    </item>
    <item>
        <set>
            <objectAnimator android:duration="300" android:valueTo="1f" android:valueType="floatType" android:propertyName="scaleX"/>
            <objectAnimator android:duration="200" android:valueTo="1f" android:valueType="floatType" android:propertyName="scaleY"/>
        </set>
    </item>
</selector>
