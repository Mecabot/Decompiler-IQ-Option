<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:layout_gravity="center" android:id="@+id/title" android:padding="6dp" android:layout_width="0dp" android:layout_height="wrap_content" android:text="test" android:layout_weight="1"/>
    <AutoCompleteTextView android:gravity="center" android:layout_gravity="center" android:id="@a/edit" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="6dp" android:layout_weight="1" android:imeOptions="actionUnspecified|actionGo|actionSend|actionDone|flagNoExtractUi"/>
    <Button android:gravity="center" android:layout_gravity="center" android:id="@a/apply" android:layout_width="0dp" android:layout_height="wrap_content" android:text="apply" android:layout_weight="1"/>
</LinearLayout>
