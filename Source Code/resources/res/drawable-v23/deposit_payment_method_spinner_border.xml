<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <stroke android:width="1dp" android:color="#dbdbdb"/>
            <solid android:color="#ffffff"/>
        </shape>
    </item>
    <item android:height="4dp" android:left="1dp" android:top="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="5dp" android:topRightRadius="5dp"/>
            <gradient android:startColor="#f5f5f5" android:endColor="#ffffff" android:angle="270" android:type="linear" android:centerY="0"/>
        </shape>
    </item>
</layer-list>
