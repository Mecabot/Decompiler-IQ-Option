<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:gravity="bottom">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp"/>
            <solid android:color="#ffffff"/>
        </shape>
    </item>
    <item android:gravity="bottom" android:height="4dp">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp"/>
            <gradient android:startColor="#f5f5f5" android:endColor="#ffffff" android:angle="270" android:type="linear" android:centerY="0"/>
        </shape>
    </item>
</layer-list>
